%h1
  Staff Users
.menu-strip{:style => "margin-bottom: 0.5em;"}
  = link_to_with_rights 'Create Staff', '#', :class => "add", :onclick => "jQuery(this).next().toggle(); return false;"
  #staff{:style => "display : none"}
    = form_for(@staff, :action => url(:staffs) ) do
      = partial :fields
      = submit 'Save'
      = link_to_with_rights 'Cancel', url(params[:return]), :class => "grey_button"
= partial 'list'