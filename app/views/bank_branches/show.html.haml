%h1
  = "Bank Branch :- #{@bank_branch.name}"
#bank{:style=>"width:25%;", :class => 'menu-strip'}
  = link_to_with_rights 'Add Bank Account','#', :onclick => "jQuery('#new_form').toggle();", :class => "add grey_button", :style => "margin: 0px; padding-right: 3px;"
  &nbsp;&nbsp;
  = link_to_with_rights "Back", url("banks/#{@bank_branch.bank_id}"), :class => "grey_button"
  %br
= partial 'bank_accounts/form'
%br
%hr

.shaded
  %h2
    = "List of Accounts under #{@bank_branch.name} Branch"
  %table.dataTable.weeksheet.report.nojs
    %thead
      %tr
        %th
          = "ID"
        %th
          = "Name"
        %th
          = "Account No."
        %th
          = "Creation Date"
        %th
          = "Created At"
        %th
          = "Created by User"
    %tbody
      - @bank_accounts.each do |ba|
        %tr
          %td
            = ba.id
          %td
            = ba.name
          %td
            = ba.account_no
          %td
            = ba.created_at.strftime('%d/%m/%Y')
          %td
            = ba.created_at
          %td
            = User.first(ba.created_by_user_id).first.login
%br