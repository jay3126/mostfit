.menu-strip{:style => "width: 10%;"}
  = link_to_with_rights "Back", url(:admin), :class => "grey_button"

%h2 Common Data Format Files
- if @files
  - if @files.empty?
    %h3 
      == No reports exist as yet.
  - else
    %table
      - @files.each do |f|
        %tr
          %td
            = link_to_with_rights f, url(:controller => :admin, :action => 'send_report', :filename => (File.join(@folder, f)))
      %br
- else
  %h3 
    == No reports exist as yet 
