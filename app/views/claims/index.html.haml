%h1
  Claims for
  =@client.name
%table
  %tr
    %td
      %b Claim ID
    %td
      %b Claim Amount
    %td
      %b Submission date
      
  - for claim in @claims
    %tr
      %td
        = claim.claim_id
      %td
        = claim.amount_of_claim
      %td
        = claim.claim_submission_date
      %td
        = link_to_with_rights 'Update', resource(@client, claim, :edit)

= link_to_with_rights 'New', resource(@client, :claims, :new)
