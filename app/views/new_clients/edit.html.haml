- @client = @client.blank? ? Client.new : @client
- if @message
  .error
    = @message[:error]
= form_for(@client, :action => url(:controller => :new_clients, :action=> :update, :id => @client.id), :multipart => true) do
  = hidden_field :name => :client_type, :value => @client.class
  = partial 'new_clients/fields'
  = submit "Update client", :class => "grey_button"
  &nbsp;&nbsp;
  %b
    Or
  &nbsp;&nbsp;
  = link_to_with_rights 'Cancel', url(:controller => :new_clients, :action => :show, :id => @client.id), :class => "grey_button"