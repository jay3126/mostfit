:javascript
  $('table.death_claim').dataTable({
      "bPaginate": false,
      "bJQueryUI": true
    });

%h1 Recorded Death event
- death_event = @client.death_event
- unless death_event.blank?
  %table.report.weeksheet.nojs.death_claim
    %thead
      %tr
        %th S.no.
        %th Deceased name
        %th Relationship to client
        %th Date of death
        %th Reported on
        %th Reported by
    %tbody
      - death_claim_count = 0
      %tr
        %td
          = death_claim_count += 1
        %td
          = death_event.deceased_name
        %td
          = death_event.relationship_to_client
        %td
          = death_event.date_of_death
        %td
          = death_event.reported_on
        %td
          = StaffMember.get(death_event.reported_by).name rescue nil
- else
  No death event found