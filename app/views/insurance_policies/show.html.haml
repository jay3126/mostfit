%h1
  InsurancePolicy #
  = @insurance_policy.policy_no

%h2
  = @insurance_policy.description

.menu-strip
  = link_to 'Edit',  resource(@client, @insurance_policy,  :edit), :class => "edit"

%table.tall.shaded
  %tr
    %th Policy number
    %td
      = @insurance_policy.policy_no
  %tr
    %th Sum insured
    %td
      = @insurance_policy.sum_insured
  %tr
    %th Premium
    %td
      = @insurance_policy.premium
  %tr
    %th Valid from
    %td
      = @insurance_policy.date_from
  %tr
    %th Valid upto
    %td
      = @insurance_policy.date_to
  %tr
    %th Cover for
    %td
      = @insurance_policy.cover_for
  %tr
    %th Status
    %td
      = @insurance_policy.status
