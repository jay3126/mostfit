%h1
  = "Biz-Location :-  #{@biz_location.name}"
= link_to_with_rights 'Add Client', resource(:new_clients, :new, :biz_location_id => @biz_location.id), :class => 'add grey_button'
- if @clients.count == 0
  %p
    %i No Client Mapping have been created yet.
- else
  %table.dataTable{:style => "width:100%;"}
    %thead
      %tr
        %th
          Id
        %th
          Name
        %th
          Effective On
        %th
          Created On
        %th
          Action
    - @clients.each do |client|
      %tr
        %td
          = client.id
        %td
          = link_to_with_rights client.name, url(:controller => :new_clients, :action => :show, :id => client.id)
        %td
          = client.date_joined.strftime("%Y-%m-%d")
        %td
          = client.created_at.strftime("%Y-%m-%d")
        %td
          - unless client_facade.is_client_active?(client)
            %span.greytext
              = "Not eligible to Apply New loan, Death event has been registered on client (#{client_facade.death_event_filed_for(@client)} Death)"
          - else
            = link_to_with_rights "Apply Loan", resource(:lending_products, :biz_location_id => @biz_location.id, :client_id => client.id)