:javascript
  $('#location_level_selector').live('change', function(){
      if(jQuery(this).val()=='0'){
        jQuery('.date').show();
      }else{
        jQuery('.date').hide();
      }
    });
%table.form
  %tr
    %th
      Location Level
    %td
      = select :location_level, :collection =>  @location_levels.map{|l| [l.level, "#{l.level}-#{l.name}"]}, :prompt => "Select Location Level", :id => 'location_level_selector'
  %tr
    %th
      Parent Location
    %td
      = select :name => 'parent_location_id', :collection =>  [], :prompt => "Select Location ", :id => 'location_selector'
  %tr
    %th
      Name
    %td
      = text_field :name
  %tr
    %th.date{:style => 'display:none'}
      Default Disbursal Date
    %td.date{:style => 'display:none'}
      = date_select_for @biz_location, :center_disbursal_date, :max_date => Date.today
  %tr
    %th
      Creation Date
    %td
      = date_select_for @biz_location, :creation_date, :max_date => Date.today
  %tr
    %th
      Address
    %td
      = text_area :biz_location_address, :rows => 6, :cols => 38

      

