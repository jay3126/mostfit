:javascript
  $('select.location').live('change', function(){
      if(jQuery(this).val()=='0'){
        jQuery('.date').show();
      }else{
        jQuery('.date').hide();
      }
    });

%h2 Create a New Biz Location
%table.form
  %tr
    %th
      Location Level
    %td
      = select :location_level, :collection =>  @location_levels.map{|l| [l.level, "#{l.level}-#{l.name}"]}, :prompt => "Please Select Location Level", :class => "chosen location"
    %th
      Name
    %th
      = text_field :name
    %th
      Creation Date
    %td
      = date_select_earliest 'biz_location[creation_date]', {:id => "creation_date"}
  %tr
    %th
      Address
    %td
      = text_area :biz_location_address, :rows => 6, :cols => 38
  %tr
    %th.date{:style => 'display:none'}
      Default Disbursal Date
    %td.date{:style => 'display:none'}
      = date_select_earliest 'biz_location[center_disbursal_date]', {:id => "center_disbursal_date"}
      

