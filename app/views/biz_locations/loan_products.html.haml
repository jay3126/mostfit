%h1== Loan Products for #{@location.name}
.menu-strip{:style => "width: 30%;"}
  = link_to "Add new Loan Product", url(:new_lending_product, :biz_location_id => @parent_location.id), :class => 'add grey_button'
  &nbsp;&nbsp;
  = link_to_with_rights "Back", request.referer, :class => "grey_button"
- if @lending_products.blank?
  %h2== No Loan Product Assigned.
- else
  %table.dataTable.weeksheet{:style => "width:100%"}
    %thead
      %tr
        %td
          Name
        %td
          Amount
        %td
          Interest rate
        %td
          Repayment frequency
        %td
          Tenure
        %td
          Action
    %tbody.form
      - @lending_products.each do |lp|
        - locations = lp.get_assign_locations(get_effective_date)
        %tr
          %td
            = link_to_with_rights lp.name, resource(lp)
          %td
            = lp.to_money[:amount]
          %td
            = lp.interest_rate
          %td
            = lp.repayment_frequency
          %td
            = lp.tenure
          %td
            = link_to_with_rights "Create Loan", resource(:lendings, :new, :lending_product_id => lp.id, :client_id => "#{@client.blank? ? '' : @client.id}", :biz_location_id => @location.id)
