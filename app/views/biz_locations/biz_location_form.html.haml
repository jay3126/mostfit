:javascript
  $(document).ready(function() {
    $("select.multiple").multiSelect({selectAllText:jQuery(this).attr('prompt')});
  });
%br
= form_for(@new_biz_location, :action => url(:controller => :biz_locations, :action=> :create_and_assign_location, :id => @biz_location.id)) do
  = hidden_field :location_level, :value => @child_location_level.level
  %div{:style => 'display:table; width:98%;', :class => 'shaded'}
    %table.tall.shaded
      %tr
        %th
          Name
        %td
          = text_field :name
      %tr
        %th
          Creation Date
        %td
          = date_select 'creation_date', ''
      %tr
        %th
          Address
        %td
          = text_area :biz_location_address, :row => 6, :cols => 38
      %tr
        %th
          Originator By
        %td
          = select :originator_by, :collection => @staff_members, :text_method => :name, :value_method => :id
      %tr
        %th
          Managed By
        %td
          = select :name => :managed_by, :collection => @staff_members, :text_method => :name, :value_method => :id
      - if @child_location_level.level == 0
        %tr
          %th
            Default Disbursal Date
          %td
            = date_select 'center_disbursal_date', ''
      - if @child_location_level.level == 1
        %tr
          %th
            Loan Product
          %td
            = select :name => 'lending_product_ids', :collection =>  LendingProduct.all, :text_method => :name, :value_method => :id, :prompt => "Select Loan Product ", :class => 'multiple'
    - if @child_location_level.level == 0
      %div{:style => "display:table-cell; width:42%;"}
        %table.tall
          %tr
            %th
              No. Of Meetings
            %td
              = text_field :name => "meeting[meeting_numbers]"
          %tr
            %th
              Meeting Frequency
            %td
              - frequency = @biz_location.branch_loan_product_repayment_frequencies
              = select :name => "meeting[meeting_frequency]", :collection => frequency.collect{|f| f.to_s}
          %tr
            %th
              Meeting Time
            %td
              = text_field :name => "meeting[meeting_time_begins_hours]", :size => 2, :maxlength => 2
              %b
              = text_field :name => "meeting[meeting_time_begins_minutes]", :size => 2, :maxlength => 2
              &nbsp;&nbsp;
              %span.greytext time is in a 24 hour format
  %br
  = submit "Save", :class => "grey_button"
  &nbsp;&nbsp;
  = link_to 'Cancel', params[:return], :class => "grey_button"