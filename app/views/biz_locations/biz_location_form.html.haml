%br
= form_for(@new_biz_location, :action => url(:controller => :biz_locations, :action=> :create_and_assign_location, :id => @biz_location.id)) do
  = hidden_field :location_level, :value => @child_location_level.level
  %table.shaded
    %tr
      %th
        Name
      %td
        = text_field :name
    %tr
      %th
        Creation Date
      %td
        = date_select 'creation_date'
    %tr
      %th
        Address
      %td
        = text_area :biz_location_address, :row => 6, :cols => 38
    - if @child_location_level.level == 0
      %tr
        %th
          Default Disbursal Date
        %td
          = date_select 'center_disbursal_date'
  %br
  = submit "Save", :class => "grey_button"
  &nbsp;&nbsp;
  = link_to 'Cancel', params[:return], :class => "grey_button"