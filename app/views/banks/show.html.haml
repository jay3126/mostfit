%h1
  = "Bank : #{@bank.name}"
.menu-strip{:style => "width: 25%;"}
  = link_to_with_rights 'Add Bank Branch','#', :onclick => "jQuery('#new_form').toggle();", :class => "add grey_button", :style => "margin: 0px; padding-right: 3px;"
  &nbsp;&nbsp;
  = link_to_with_rights "Back", url(:banks), :class => "grey_button"
  %br
= partial 'bank_branches/form'
%br
%hr

.shaded
  %h2
    = "Bank Branches"
  %table.form{:style => "width:100%;"}
    %thead
      %tr
        %th
          ID
        %th
          Name
        %th
          Location
    %tbody
      - @bank_branches.each do |bb|
        %tr
          %td
            = bb.id
          %td
            = link_to bb.name, resource(@bank,bb)
          %td
            = link_to_location(bb.biz_location) unless bb.biz_location.blank?
%br