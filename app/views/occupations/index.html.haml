%h1
  = I18n.t "occupation.index.list_of_occupations", :default => "List Of Occupations"

.menu-strip{:style => "width: 30%;"}
  = link_to_with_rights "Add an Occupation", url(:new_occupation), :class => 'add grey_button'
  &nbsp;&nbsp;
  = link_to_with_rights "Back", url(:admin), :class => "grey_button"
%br
%table.dataTable.report.weeksheet.nojs
  %thead
    %tr
      %th
        = I18n.t "occupation.index.id", :default => "Id"
      %th
        = I18n.t "occupation.index.occupation", :default => "Occupation"
      %th
        = I18n.t "occupation.index.code", :default => "Code"
      %th
        = I18n.t "occupation.index.actions", :default => "Actions"

  - for occupation in @occupations
    %tr{:class => cycle('odd', '')}
      %td
        = occupation.id
      %td
        = link_to_with_rights occupation.name, url(:occupation, occupation)
      %td
        = occupation.code
      %td
        = link_to_with_rights I18n.t("occupation.index.edit", :default => "Edit"), url(:edit_occupation,  occupation)