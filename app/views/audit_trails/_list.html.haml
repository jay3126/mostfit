- user_not_found = Constants::Change::AUDIT_TRAIL_USER_NOT_FOUND
- user_role_not_found = Constants::Change::AUDIT_TRAIL_USER_ROLE_NOT_FOUND
%table.report.nojs{:width => "100%"}
  %tr
    %th
      For
    %th
      Action
    %th
      Changes
    %th
      Date
    %th
      User
    %th
      Role
  -@trails.each do |trail|
    %tr
      %td
        =link_to "#{trail.auditable_type} #{trail.auditable_id}", url(:controller => trail.auditable_type.pluralize.downcase, :action => "show", :id => trail.auditable_id)
      %td.text
        %span{:class => get_status_class([:delete, :create, :update].index(trail.action))}
          = trail.action
      %td.text
        %table{:width => '100%'}
          = diff_display(trail.changes, @obj, trail.action)
      %td
        = trail.created_at.strftime("%d-%m-%Y %H:%M")
      %td
        = (trail.user and trail.user.login) ? trail.user.login : user_not_found
      %td
        = trail.user_role || user_role_not_found
