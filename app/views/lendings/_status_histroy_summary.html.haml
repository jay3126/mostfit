%table.loan{ :style => "border: solid 1px #cfcfcf; margin: 5px;" }
  %tr.even
    %th.even Status
    %td= @lending.status.humanize
  - if @lending.is_repaid?
    - repaid = @lending.loan_repaid_status
    %tr.odd
      %th.odd Nature
      %td= "#{repaid.repaid_nature.humanize} on #{repaid.repaid_on_date}"
    %tr.even
      %th.even Closing outstanding principal
      %td= repaid.to_money[:closing_outstanding_principal]
    %tr.odd
      %th.odd Closing outstanding interest
      %td= repaid.to_money[:closing_outstanding_interest]
  - elsif @lending.is_written_off?
    - recovery = @lending.loan_recovery_till_date
    %tr.odd
      %th.odd On Date
      %td= @lending_status.effective_on
    %tr.even
      %th.even Recovery
      %td= recovery.to_s
  - else
    %tr.odd
      %th.odd On Date
      %td= @lending_status.effective_on
  %tr.odd
    %th.odd Funder
    %td= loan_facade.get_funder_assigned_to_loan(@lending.id).name rescue nil
  %tr.even
    %th.even Funding Line
    %td= loan_facade.get_funding_line_assigned_to_loan(@lending.id).name rescue nil
  %tr.odd
    %th.odd Tranch
    %td= loan_facade.get_tranch_assigned_to_loan(@lending.id).name rescue nil
  %tr.even
    %th.even Reason/Remarks
    %td= Comment.lending_to_s(@lending.id).join('<br>')