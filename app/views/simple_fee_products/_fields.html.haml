%table.tall.shaded
  %tr
    %th
      Name
    %td
      = text_field :name
  %tr
    %th
      Fee Charge Type
    %td
      = select :fee_charged_on_type, :collection => Constants::Transaction::FEE_CHARGED_ON_TYPES.map{|f| [f, f.to_s.humanize]}
  %tr
    %th
      Created On
    %td
      = date_select 'simple_fee_product[created_on]', Date.today, {:id => 'created_on'}