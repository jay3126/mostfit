- total_columns = 7
%form{:action => url(:controller => :client_verifications, :action => :pending_verifications), :method => :get}
  = partial "lib/branch_center_selector"
= form(:action => url(:controller => 'client_verifications', :action => 'record_verifications'), :method => :post) do
  %table.nojs{:style => "text-align:center"}
    %thead
      %tr
        %td
          = "ID"
        %td
          = "Applicant"
        %td
          = "Address"
        %td{:colspan => 2}
          = "Contact Point Verification 1"
        %td{:colspan => 2}
          = "Contact Point Verification 2"
      %tr
        %td{:colspan=>3}
          = "&nbsp;"
        %td
          = "Approved"
        %td
          = "Rejected"
        %td
          = "Approved"
        %td
          = "Rejected"
    %tbody.form
      - unless @loan_applications_pending_verification.empty?
        - @loan_applications_pending_verification.each do |l|
          %tr
            %td
              = l.id
            %td
              = l.client_name
            %td
              = l.client_address
            -# CPV1 can be recorded only if CPV1 is not already done.
            - if ClientVerification.get_CPV1_status(l.id) == Constants::Verification::NOT_VERIFIED
              %td
                %input{:name => "[verification_status][CPV1_verification_status][#{l.id}]", :type => "radio", :value => Constants::Verification::VERIFIED_ACCEPTED}
              %td
                %input{:name => "[verification_status][CPV1_verification_status][#{l.id}]", :type => "radio", :value => Constants::Verification::VERIFIED_REJECTED}
            - else
              %td{:colspan => 2}
                = get_status_display(ClientVerification.get_CPV1_status(l.id))
            
            - if ClientVerification.is_CPV1_verified?(l.id)
              %td
                %input{:name => "[verification_status][CPV2_verification_status][#{l.id}]", :type => "radio", :value => Constants::Verification::VERIFIED_ACCEPTED}
              %td
                %input{:name => "[verification_status][CPV2_verification_status][#{l.id}]", :type => "radio", :value => Constants::Verification::VERIFIED_REJECTED}
            - else
              %td{:colspan => 2}
                = "CPV1 not complete"
        %tr
          %td{:colspan => 7,:style=>"text-align : right"}
            = submit "Save all"
            %input{:value => "Reset all", :type => "reset"}
      - else
        %tr
          %td{:colspan => total_columns}
            %b
              = "No loan applications pending for verification"
- if (@recorded and @recorded == true)
  = partial :recorded_list
