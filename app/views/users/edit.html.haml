
.prefix-2.span-20.suffix-2.last
  %h1= "Edit user '#{@user.login}'"

  = error_messages_for @user

  = form_for(@user, :action => url(:user, @user)) do
    = partial 'fields'
    %p
      = submit "Save changes"
  
  %hr
  %h2 Change password
  %h5 Use this section if you only want to change your password
  = form_for(@user, :action => url(:action => :admin_change_password, :user_id => @user.id)) do
    %table
      %tr
        %td
          Password:
        %td
          = password_field :password
      %tr
        %td
          Password confirmation:
        %td
          = password_field :password_confirmation
          %br/
          %span.greytext (password fields must be filled to complete user profile)
    %table
      %td
        = submit "Save new password"
      %td
        %h5 Or
      %td      
        = link_to 'Back', url(:users), :class => "grey_button"

  %p
    %br/