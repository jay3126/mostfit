:javascript
  $(document).ready(function() {
    if(jQuery('#login_info').attr('checked') == true){
      $('.user_tab').show();
    }

    $('#login_info').change(function() {
      if(jQuery(this).attr('checked') == true){
        $('.user_tab').show();
      }else{
        $('.user_tab').hide();
      }
    })
  });
%table.tall.shaded
  %tr
    %th
      Name:
    %td
      = text_field :name, :size => 40
      %br/
      %span.greytext the screen name of the staff member
  %tr
    %th
      Employee Id:
    %td
      = text_field :employee_id, :size => 20
      %br/
      %span.greytext employee id of staff as given by MFI
  %tr
    %th
      Designation:
    %td
      = select :designation_id, :collection => Designation.all.map{|d| [d.id.to_s, d.name]}
  %tr
    %th
      Location:
    %td
      = select :name => 'biz_location_id', :collection => BizLocation.all('location_level.level'.to_sym.not => 0).map{|d| [d.id.to_s, d.name]}, :prompt => 'Select Location'
  %tr
    %th
      Manage Locations:
    %td
      = select :name => 'manage_location_ids', :collection => BizLocation.all.map{|d| [d.id.to_s, d.name]}, :class => 'multiple', :prompt => 'Select Location'
  %tr
    %th
      Mobile number:
    %td
      = text_field :mobile_number, :size => 15
      %br/
      %span.greytext mobile number of the staff member so that he/she can make mobile updates from this number
  %tr
    %th
      Joining date:
    %td
      = date_select_for @staff_member, :creation_date
      &nbsp;&nbsp;
      %span.greytext date this staff member joined active duty
  %tr
    %th
      Active:
    %td
      = check_box :active
      &nbsp;&nbsp;
      %span.greytext only active staff members can be marked as managers, approve loans, or receive payments
  %tr
    %th
      Login Info:
    %td
      = check_box :name => 'login_info', :id => 'login_info', :checked => !params[:login_info].blank?
%table{:class => 'user_tab tall shaded', :style => 'display:none'}
  %tr
    %th
      Login Name:
    %td
      = text_field :name => 'user[login]', :size => 40, :value => "#{params[:user].blank? ? '' : params[:user][:login]}"
  %tr
    %th
      Password:
    %td
      = password_field :name => 'user[password]'
  %tr
    %th
      Password confirmation:
    %td
      = password_field :name => 'user[password_confirmation]'