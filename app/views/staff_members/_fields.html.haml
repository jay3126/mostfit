%table.form
  %tr
    %td
      Name:
    %td
      = text_field :name, :size => 40
      %br/
      %span.greytext the screen name of the staff member
  %tr
    %td
      Designation:
    %td
      = text_field :staff_designation, :size => 40
  %tr
    %td
      Date of Birth:
    %td
      = date_select_for @staff_member, :staff_date_of_birth, :min_date => Date.today-36500, :max_date => Date.today-1000
  %tr
    %td
      Employee Id:
    %td
      = text_field :employee_id, :size => 40
  %tr
    %td
      Father Name:
    %td
      = text_field :father_name, :size => 40
  %tr
    %td
      Gender:
    %td
      = select :gender, :collection => [[:female, "Female"], [:male, "Male"]], :prompt => "Please choose a gender"
  %tr
    %td
      Address:
    %td
      = text_area :address, :rows => 6, :cols => 38
  %tr
    %td
      Mobile number:
    %td
      = text_field :mobile_number, :size => 40
      %br/
      %span.greytext mobile number of the staff member so that he/she can make mobile updates from this number
  %tr
    %td
      Joining date:
    %td
      = date_select_for @staff_member, :creation_date, :max_date => Date.today
      &nbsp;&nbsp;
      %span.greytext date this staff member joined active duty
  %tr
    %td
      Active:
    %td
      = check_box :active
      &nbsp;&nbsp;
      %span.greytext only active staff members can be marked as managers, approve loans, or receive payments
