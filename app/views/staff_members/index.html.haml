%div{:style => "float: right"}

%h1
  Overview of all staff members 
  = " of #{@branch.name}" if @branch
= link_to_with_rights 'create a new staff member', resource(:staff_members, :new), :class => "add grey_button", :style => "margin: 0px; padding-right: 3px;"
%br
%br
- if @staff_members.blank?
  %p
    %i No staff members been created yet.
- else
  %table.dataTable.from{:style => "width:100%;"}
    %thead
      %tr
        %td
          id
        %td
          Staff Name
        %td
          Designation
        %td
          Employee Id
        %td
          Mobile Number
        %td
          Active
        %td
          Joining Date
    - @staff_members.each do |staff_member|
      %tr
        %td
          = staff_member.id
        %td
          = link_to_with_rights(staff_member.name, resource(staff_member))
        %td
          = staff_member.designation.name unless staff_member.designation.blank?
        %td
          = staff_member.employee_id if staff_member.employee_id
        %td
          = staff_member.mobile_number
        %td
          = staff_member.active
        %td
          = staff_member.creation_date
    %tfoot
      %tr
        %td{ :colspan => 8 }