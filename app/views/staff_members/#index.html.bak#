%h1 Overview of all staff members

%p
  == Manage existing staff members or #{link_to_with_rights 'create a new staff member', resource(:staff_members, :new)}.

- if @staff_members.blank?
  %p
    %i No staff members been created yet.
- else
  %table.narrow.form{ :width => '100%' }
    %thead
      %tr
        %th
        %th
          name
        %th
          status
        %th{ :width => '50px' }
          manages branches
        %th{ :width => '70px' }
          manages centers
        %th{ :width => '70px' }
          received payments
        %th{ :width => '70px' }
          applied loans
        %th{ :width => '70px' }
          approved loans
        %th{ :width => '70px' }
          rejected loans
        %th{ :width => '70px' }
          disbursed loans
        %th{ :width => '70px' }
          wrote off loans
    - for staff_member in @staff_members
      %tr{ :class => cycle('odd','') }
        %td
        %td
          %b= link_to_with_rights staff_member.name, resource(staff_member)
        %td
          %b= staff_member.active? ? 'active' : 'disabled'
        %td
          = staff_member.branches.count
        %td
          = staff_member.centers.count
        %td
          = staff_member.applied_loans.count
        %td
          = staff_member.approved_loans.count
        %td
          = staff_member.rejected_loans.count
        %td
          = staff_member.disbursed_loans.count
        %td
          = staff_member.written_off_loans.count
        %td
          = link_to_with_rights 'edit', resource(staff_member, :edit)

    %tfoot
      %tr
        %td{ :colspan => 11 }
  = link_to_with_rights 'Create a new staff member', url(:new_staff_member)
/
