:javascript
  $('table.staff_posting').dataTable({
      "bPaginate": false,
      "bJQueryUI": true
    });
%h1 List of Staff Members Posted at various Locations

.menu-strip{:style => "width: 25%;"}
  = link_to_with_rights 'Add Posting', "#", :onclick =>"jQuery('#meeting_div').toggle(); return false;", :class => 'add grey_button'
  &nbsp;&nbsp;
  = link_to_with_rights "Back", url(:admin), :class => "grey_button"

#meeting_div(style = "display : none")
  = form_for(@staff_posting, :action => url(:controller => :staff_postings, :action => :create), :method => "POST", :class => "tall shaded") do
    = partial 'staff_postings/fields'
    = submit 'Save', :class => "greenButton"
    &nbsp;&nbsp;
    %b
      Or
    &nbsp;&nbsp;
    = link_to_with_rights "Cancel", "#", :onclick => "jQuery('#meeting_div').hide(); return false;", :class => "grey_button"
%br
- if @staff_postings.count == 0
  %p
    %i No Staff Posting has been created yet.
- else
  %table.report.weeksheet.nojs.staff_posting
    %thead
      %tr
        %td
          id
        %td
          Staff Name
        %td
          Designation
        %td
          Posting
        %td
          Effective On
    - @staff_postings.each do |staff_posting|
      - staff_member = staff_posting.staff_assigned
      %tr
        %td
          = staff_posting.id
        %td
          = link_to_with_rights staff_member.name, resource(staff_member)
        %td
          = staff_member.designation.name unless staff_member.designation.blank?
        %td
          = link_to_with_rights staff_posting.assigned_to_location.name, url("user_locations/show/#{staff_posting.assigned_to_location.id}")
        %td
          = staff_posting.effective_on
    %tfoot
      %tr
        %td{ :colspan => 7 }
