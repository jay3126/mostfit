%h1
  Document Types
= link_to_with_rights 'New', url(:new_document_type), :class => 'add grey_button'
= link_to_with_rights 'Back', url(:admin), :class => 'grey_button'
- unless @document_types.blank?
  %table.dataTable.report.weeksheet.nojs
    %thead
      %tr
        %th
          Name
        %th
          Applicable to
        %th
          Action
    - for document_type in @document_types
      %tr
        %td
          =document_type.name
        %td
          =document_type.parent_models
        %td
          = link_to_with_rights 'Edit', url(:edit_document_type,  document_type)


