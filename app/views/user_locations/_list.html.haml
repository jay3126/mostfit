%br
- if @location_levels.count == 0
  %p
    %i No Location Mapping has been created yet.
- else
  %table.home_page.dataTable.report.weeksheet.nojs
    %thead
      %tr
        %th
          id
        %th
          Name
        %th
          Location Level
        %th
          Number of Sub-Locations
        %th
          Created On
    - @location_levels.each do |location_level, biz_locations|
      - unless location_level.level == 0
        - biz_locations.each do |biz_location|
          %tr
            %td
              = biz_location.id
            %td
              = link_to_with_rights(biz_location.name, url(:controller => :user_locations, :action => :show, :id => biz_location.id))
            %td
              = location_level.name
            %td
              = LocationLink.get_children_by_sql(biz_location, get_effective_date, true)
            %td
              = location_level.creation_date
