.menu-strip
  = link_to_with_rights 'Add Loan', resource(:lending_products, :biz_location => @biz_location.id, :client_id => "#{@client.blank? ? '' : @client.id}" ), :class => 'add'
%br
- if @lendings.blank?
  %p
    %i No Loans Mapping have been created yet.
- else
  %table.dataTable.report.weeksheet.nojs
    %thead
      %tr
        %th
          id
        %th
          Name
        %th
          Description
        %th
          Created On
        %th
          Status
    - for lending in @lendings
      %tr
        %td
          = lending.id
        %td
          = link_to_with_rights lending.lending_product.name, resource(lending)
        %td
          = lending.to_s
        %td
          = lending.created_at.strftime("%Y-%m-%d")
        %td
          = lending.status.to_s.humanize