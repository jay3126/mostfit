:javascript
  $('table.center_loan').dataTable({
      "bPaginate": false,
      "bJQueryUI": true
    });
= link_to_with_rights 'Add Loan', resource(:lending_products, :biz_location_id => @biz_location.id, :client_id => "#{@client.blank? ? '' : @client.id}" ), :class => "add grey_button"
%br
- if @lendings.blank?
  %p
    %i No Loans Mapping have been created yet.
- else
  %table.report.weeksheet.nojs.center_loan
    %thead
      %tr
        %th
          id
        %th
          Name
        %th
          Description
        %th
          Created On
        %th
          Status
    - for lending in @lendings
      %tr
        %td
          = lending.id
        %td
          = link_to_with_rights lending.lending_product.name, resource(lending)
        %td
          = lending.to_s
        %td
          = lending.created_at.strftime("%Y-%m-%d")
        %td
          = lending.status.to_s.humanize