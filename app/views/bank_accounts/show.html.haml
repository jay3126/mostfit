%h1
  = "Bank Account :- #{@bank_account.name}"
.shaded
  .menu-strip
    = link_to_with_rights 'Add Bank Money Deposits',resource(:money_deposits), :onclick => "jQuery('#new_form').toggle();", :class => "add grey_button", :style => "margin: 0px; padding-right: 3px;"
%br
%hr

.shaded
  %h2
    = "Bank Account Deposits"
  %table.form{:style => "width:100%;"}
    %thead
      %tr
        %th
          = "ID"
        %th
          = "Amount"
        %th
          = "Created By User"
        %th
          = "Manage By Staff"
        %th
          = "Created Date"
    %tbody
      - @money_deposits.each do |md|
        %tr
          %td
            = md.id
          %td
            = md.deposit_money_amount
          %td
            = md.user.name
          %td
            = md.staff_member.name
          %td
            = md.created_at.strftime('%d/%m/%Y')
%br
