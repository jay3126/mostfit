.shaded
  %h1 Ledger
  %table.tall.shaded
    %tr
      %th
        Name
      %td
        = @ledger.name
    %tr
      %th
        Type
      %td
        = @ledger.account_type
    - opening_balance, open_date = @accounting_facade.get_ledger_opening_balance_and_date(@ledger.id)
    %tr
      %th
        Open on
      %td
        = open_date
    %tr
      %th
        Opening balance
      %td
        = "#{opening_balance} as on #{open_date}"
    %tr
      %th
        Current Balance
      %td
        = "#{@accounting_facade.get_current_ledger_balance(@ledger.id, @cost_center_id)} as on #{Date.today}"
    %tr
      %th
        Balance as on
      %td
        = form :action => url(:controller => :ledgers, :action => :show, :id => @ledger.id) do 
          = @accounting_facade.get_historical_ledger_balance(@ledger.id, @date)
          as on
          = date_select :date, @date, :min_date => @ledger.open_on, :max_date => Date.today
          = submit "Go"
%div.tab_container.shaded
  %ul.tabs
    %li#vouchers
      Vouchers
    %li#ledger_postings
      Postings
  %div.tab
    = partial "vouchers/list", :vouchers => @vouchers  
