- if @funding_lines.blank?
  %p
    %i No funding lines have been created yet.
- else
  %table.dataTable.report.weeksheet.nojs
    %thead
      %tr
        %th
        %th id
        %th amount
        %th interest
        %th disbursal
        %th first payment
        %th last payment
        %th
        %th
        %th
    - for funding_line in @funding_lines
      %tr{ :class => cycle('odd','') }
        %td &nbsp;
        %td
          = link_to_with_rights(funding_line.id, resource(@funder, funding_line))
        %td
          %b= funding_line.amount
        %td
          %b
            = funding_line.interest_percentage
            \%
        %td
          = funding_line.disbursal_date
        %td
          = funding_line.first_payment_date
        %td
          = funding_line.last_payment_date
        %td
          = link_to_with_rights("Tranches","/tranches/list/#{funding_line.id}")
          
        %td
          = link_to_with_rights("details", resource(@funder, funding_line))          
        %td
          = link_to_with_rights 'edit', resource(@funder, funding_line, :edit), :class => "edit"