- biz_locations = CostCenter.all.map(&:biz_location).compact || []
- all_locations = BizLocation.all.select{|l| l.location_level.level == 1 && !biz_locations.include?(l)}
%table.tall.shaded
  %tr
    %th
      Name
    %td
      = text_field :name
  %tr
    %th
      Location
    %td
      = select :biz_location, :collection => all_locations.map{|f| [f.id,f.name.humanize]}