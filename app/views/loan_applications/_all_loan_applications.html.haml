:javascript
  $('table.loan_app').dataTable({
      "sScrollX": "100%",
      "bPaginate": false,
      "bSort": false,
      "bJQueryUI": true,
      "sDom": '<"H"Tfr>t<"F"ip>',
      "oTableTools": {
        "sSwfPath": "/swf/copy_csv_xls_pdf.swf"
      }
    });
.shaded
  %h2 All loan applications
  - if @all_loan_applications and not @all_loan_applications.empty?
    %table.loan_app.report.weeksheet.nojs.unsortable
      %thead
        %tr
          %th Loan Application ID
          %th Applicant Name
          %th Guarantor Name
          %th Relationship
          %th Date Of Birth
          %th Age
          %th Age As On Date
          %th Ration Card No.
          %th Reference 2 Type
          %th Reference 2 No.
          %th Applied for amount
          %th Address
          %th Location
          %th Pincode
          %th Status
          %th Updated at
      %tbody
        - @all_loan_applications.sort.each do |loan_application|
          %tr
            %td
              = link_to loan_application.id, "/loan_applications/#{loan_application.id}"
            %td
              = loan_application.client_name
            %td
              = loan_application.client_guarantor_name
            %td
              = loan_application.client_guarantor_relationship
            %td
              = loan_application.client_dob.blank? ? "-" : "#{loan_application.client_dob}"
            %td
              = loan_application.client_age_as_on.blank? ? loan_application.client_age : loan_application.client_age_as_on
            %td
              = loan_application.client_age_as_on_date.blank? ? Date.today : loan_application.client_age_as_on_date
            %td
              = loan_application.client_reference1.blank? ? "-" : loan_application.client_reference1
            %td
              = loan_application.client_reference2.blank? ? "-" : loan_application.client_reference2_type.humanize
            %td
              = loan_application.client_reference2.blank? ? "-" : loan_application.client_reference2
            %td
              = loan_application.loan_money_amount.to_s
            %td
              = loan_application.client_address
            %td
              = loan_application.client_state.humanize rescue ''
            %td
              = loan_application.client_pincode
            %td
              = loan_application.status.humanize
            %td
              = loan_application.updated_at
  - else
    %h3 No loan applications found
