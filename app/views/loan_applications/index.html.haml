%h1
  Loan Applications 
%table.narrow.form{:width => "100%"}
  %thead
    %tr
      %th Client ID
      %th Name
      %th Age
      %th Address
      %th Loan Amount
  %tbody
    - @loan_applications.each do |loan_application|
      - if @errors[loan_application.client_id]
        %tr
          %td{:colspan => 5}
            .error
              - @errors[loan_application.client_id].keys.each do |key|
                = "#{key} : #{@errors[loan_application.client_id][key]}"
                %br
      %tr
        %td
          = loan_application.client_id
        %td
          = loan_application.client_name
        %td
          = loan_application.client_dob.nil? ? "Unknown" : Date.today.year - loan_application.client_dob.year
        %td
          = loan_application.client_address
        %td
          = loan_application.amount  

= link_to 'New', url(:controller => :loan_applications, :action => :bulk_new)