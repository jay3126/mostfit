= partial :form

- unless @data.blank?
  %br
  %table{:class => "report nojs"}
    %tr
      %th
        Branch
      %th
        Center
      %th
        Healthcheck status
      %th
        count
    - @data.each do |s_no, value|
      - value.each do |branch_id, value1|
        - value1.each do |center_id, value2|
          - value2.each do |status, value3|
            %tr
              %td{:style => "text-align:center"}
                = BizLocation.get(branch_id).name
              %td{:style => "text-align:center"}
                = BizLocation.get(center_id).name
              %td{:style => "text-align:center"}
                - loan_file = LoanFile.first(:at_branch_id => branch_id, :at_center_id => center_id)
                - healthcheck_is_clear = Checklist.is_healthcheck_complete?("loan_file_"+loan_file.loan_file_identifier.to_s)
                = healthcheck_is_clear ? "Cleared" : "Pending"
              %td{:style => "text-align:center"}
                = value3
- else
  .shaded
    %h3 No records found