        %td
        %td
          = total_rows[:loan_insurance]
        %td
        %td
        %td
          = total_rows[:fee_collected]
        %td
          = total_rows[:installment_amount]
        %td
        %td
        %td
        %td
          = total_rows[:loan_disbursed_amount]
        %td
          = total_rows[:loan_outstanding_principal]
        %td
          = total_rows[:loan_outstanding_interest]
        %td
          = total_rows[:total_interest_due_at_org]
        %td
        %td
        %td
          = total_rows[:principal_week]
        %td
