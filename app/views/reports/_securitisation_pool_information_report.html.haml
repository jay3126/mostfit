- if @data.blank?
  %h2
    No Data to display
- else
  %table.dataTable.report.weeksheet.nojs
    %thead
      %tr
        %th
          Branch Name
        %th
          Center Name
        %th
          Loan Account Number
        %th
          Member code
        %th
          Member Name
        %th
          Member address
        %th
          State
        %th
          Address document
