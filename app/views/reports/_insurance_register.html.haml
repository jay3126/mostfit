= partial :form
%table.report.nojs
  %tr.header
    %th{:width => "10px"}
      Client Name
    %th
      Client Age
    %th
      Spouse Name
    %th
      Spouse Age
    %th
      Center Name
    %th
      Branch Name
    %th
      Disbursal Date
    %th
      Disbursal Amount

  - @data.each do  |client_id, hash|
    - debugger
    - client = hash[:client]
    - loans = hash[:loans]
    - loans.each do |loan|
      %tr 
        %td{:width => "10px"}
          = link_to client.name, resource(client)
        %td
          = ((Date.today - client.date_of_birth).to_i/365) rescue nil
          years
        %td
          = client.spouse_name
        %td
          == #{((Date.today - client.spouse_date_of_birth).to_i/365).to_i rescue nil}
          years
        %td
          = client.center.name
        %td
          = client.center.branch.name
        %td
          = loan.disbursal_date
        %td
          = loan.amount
