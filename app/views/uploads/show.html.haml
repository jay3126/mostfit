%h1 Details of Upload of filename: #{@upload.filename}

.menu-strip{:style => "width:80%;"}
  = link_to 'Continue', url(:continue_upload, @upload), :class => "greenButton"
  &nbsp;&nbsp;
  = link_to_with_rights 'Reset and Delete all Data', url(:reset_upload, @upload, :delete => 1), :class => "cancelButton"
  &nbsp;&nbsp;
  = link_to_with_rights 'Reupload', url(:edit_upload, @upload), :class => "cancelButton"
  &nbsp;&nbsp;
  = link_to_with_rights 'Extract', url(:extract_upload, @upload), :class => "cancelButton"
  &nbsp;&nbsp;
  = link_to_with_rights 'Stop', url(:stop_upload, @upload), :class => "cancelButton"
  &nbsp;&nbsp;
  = link_to_with_rights "Refresh", resource(@upload), :class => "greenButton"
  &nbsp;&nbsp;
  = link_to_with_rights "Back", url(:uploads), :class => "greenButton"

%table.tall
  %tr
    %th
      Directory
    %td
      = @upload.directory
  %tr
    %th
      Filename
    %td
      = @upload.filename
  %tr
    %th
      md5
    %td
      = @upload.md5sum
  %tr
    %th
      Status
    %td
      = @upload.state
  %tr
    %th
      State Detail
    %td
      - @upload.state_detail.each do |k,v|
        == #{k} : #{v}
.admin-box
  %h2 Directory contents
  - entries = `ls -l #{File.join(Merb.root,"uploads",@upload.directory)}`.split("\n").map{|x| x.split(" ")}
  %table
    %thead
      %tr
        %th
          filename
        %th
          filesize
    - entries.each do |e|
      %tr
        %td
          = link_to_with_rights e[8], url(:show_csv_upload, @upload, :filename => e[8]), :target => "_blank"
        %td
          = e[4]


- file_wcs = {}
- Upload::MODELS.each do |model|
  - fn = File.join("uploads", @upload.directory, "#{model}.csv")
  - if File.exists?(fn)
    - file_wcs[model] = `wc -l #{fn} | awk -F" " '{print $1}'`
- file_error_wcs = {}
- Upload::MODELS.each do |model|
  - fn = File.join("uploads", @upload.directory, "#{model}_errors.csv")
  - if File.exists?(fn)
    - file_error_wcs[model] = `wc -l #{fn} | awk -F" " '{print $1}'`
.admin-box
  %h2 Status
  - Upload::MODELS.each do |model|
    %ul.inline
      %li
        = @upload.send(model).count
        = "/"
        = file_wcs[model].to_i - 1
        = model
        = link_to_with_rights 'retry', url(:reload_upload, @upload, :model => model.to_s)
        &bull;
        = link_to_with_rights 'erase and reload', url(:reload_upload, @upload, :model => model.to_s, :erase => true)
        %br

.admin-box
  %h2 Errors
  %ul
    - Upload::MODELS.each do |model|
      %li
        - if file_error_wcs[model].to_i > 0
          - link_text =  "#{file_error_wcs[model].to_i - 1} #{model.to_s}"
        - else
          - link_text =  "#{file_error_wcs[model]} #{model.to_s}"
        = link_to_with_rights link_text, url(:controller => :uploads, :action => :error_log, :model => model, :id => @upload.id), :target => "_blank"