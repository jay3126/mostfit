%h1
  Fees

.menu-strip{:style => "margin: 10px;"}
  = link_to_with_rights 'Add a fee', url(:new_fee), :class => "add"

%table.narrow.shaded
  %thead
    %tr
      %th
        Name
      %th
        Description
      %th
        Show
      %th
        Edit
  - for fee in @fees
    %tr{:class => cycle('odd','even')}
      %td
        = fee.name
      %td
        = fee.description
      %td
        = link_to_with_rights 'Show', url(:fee, fee)
      %td
        = link_to_with_rights 'Edit', url(:edit_fee,  fee)

