.shaded
  %h2
    = "Health checked for Loan Files"
  - statuses = @loan_files_at_center_at_branch_for_cycle.aggregate(:health_check_status)
  - if @loan_files_at_center_at_branch_for_cycle && !@loan_files_at_center_at_branch_for_cycle.empty? && statuses.include?('1')
    %table.form{:style => "width:100%;"}
      %thead
        %tr
          %th
            = "ID"
          %th
            = "Loan file Identifier"
          %th
            = "Number of applications"
          %th{:colspan => 2, :align => "center"}
            = "Status"
          %th
            = "Remark"
      %tbody
        - @loan_files_at_center_at_branch_for_cycle.each do |lf|
          - unless lf.health_check_status == "Pending"
            %tr
              %td
                = lf.id
              %td
                = link_to lf.loan_file_identifier, resource(lf)
              %td
                = lf.loan_applications.count
              %td
                = lf.health_check_status
              %td
                = lf.health_status_remark
  - else
    No health checked Loan Files found.

%br