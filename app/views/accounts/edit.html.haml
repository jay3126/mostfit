- form_url   =  resource(@account, {:return => params[:return]})
=error_messages_for @account

= form_for(@account, :action => form_url, :class => "form" ) do
  %h1 
    == Edit Account '#{@account.name}'
  %fieldset
    = partial "accounts/fields"
    = submit "Update"

= link_to_with_rights 'Show', url(:account, @account)
|
= link_to_with_rights 'Back', url(:account, @account)
